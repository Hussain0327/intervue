# ===========================================
# Intervue Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Database
DATABASE_URL=postgresql+asyncpg://intervue:intervue_dev@localhost:5432/intervue

# Redis
REDIS_URL=redis://localhost:6379

# Frontend
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true

# LLM Settings
# Provider: "anthropic" or "openai"
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-20250514

# ===========================================
# Streaming Pipeline Configuration
# ===========================================
# Enables low-latency streaming mode (<500ms vs 2-6s batch mode)
# Set to false to use batch mode (higher latency, lower cost)
STREAMING_ENABLED=true

# STT Provider: "deepgram" (streaming, $0.0043/min) or "whisper" (batch, $0.006/min)
# Deepgram provides real-time transcription; Whisper is used as fallback
STT_PROVIDER=deepgram
DEEPGRAM_API_KEY=your_deepgram_api_key

# TTS Provider: "elevenlabs" (streaming, $0.30/1K chars) or "openai" (batch, $0.015/1K chars)
# ElevenLabs provides streaming audio; OpenAI is used as fallback
TTS_PROVIDER=elevenlabs
ELEVENLABS_API_KEY=your_elevenlabs_api_key
# Voice ID - default is "Rachel" (21m00Tcm4TlvDq8ikWAM)
# Other options: https://elevenlabs.io/docs/voices/premade-voices
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
# Model ID - eleven_turbo_v2_5 is optimized for low latency
ELEVENLABS_MODEL_ID=eleven_turbo_v2_5

# ===========================================
# Cost Comparison (Streaming vs Batch)
# ===========================================
# | Service        | Streaming          | Batch              |
# |----------------|--------------------|--------------------|
# | STT            | Deepgram $0.0043/m | Whisper $0.006/min |
# | TTS            | ElevenLabs $0.30/K | OpenAI $0.015/1K   |
# | Latency        | ~500ms             | 2-6+ seconds       |
# ===========================================
